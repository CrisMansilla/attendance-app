<form action="/edit_student/edit" method="post">
    <h1>Edición de <%= student.nombre %></h1>
    <input type="hidden" name="random_forest" id="random_forest" value="<%= student.aidi %>">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="ident" name="ident" value="<%= student.nombre %>" required>
    </div>
    <div class="mb-3">
        <label for="value" class="form-label">Valor de la clase</label>
        <input type="number" class="form-control" id="val" name="val" value="<%= student.valor_clase %>" required>
    </div>
    <div class="mb-3">
        <label for="dow" class="form-label">Día de la semana de la clase</label>
        <select class="form-select" id="dow" name="dow" required>
            <option value="" disabled selected>Seleccione un día</option>
            <option value="1">Lunes</option>
            <option value="2">Martes</option>
            <option value="3">Miércoles</option>
            <option value="4">Jueves</option>
            <option value="5">Viernes</option>
            <option value="6">Sábado</option>
            <option value="0">Domingo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Editar estudiante</button>
</form>